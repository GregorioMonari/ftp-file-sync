{
  "name": "client-js",
  "version": "0.0.1",
  "description": "Sync filesystem with an ftp server",
  "main": "./build/main.js",
  "scripts": {
    "start": "node ./build/main",
    "build": "tsc",
    "dev:build": "tsc -w",
    "dev:run": "nodemon build/main",
    "start:dev": "concurrently npm:dev:*",
    "start:build": "tsc && node ./build/main",
    "test": "jest",
    "test:integration": "jest --config ./test/jest-integration.json --runInBand"
  },
  "author": "Gregorio Monari",
  "license": "MIT",
  "devDependencies": {
    "@types/is-ci": "^3.0.4",
    "@types/node": "^20.11.0"
  },
  "dependencies": {
    "@types/detect-port": "^1.3.5",
    "@types/jest": "^29.5.2",
    "@types/ws": "^8.5.11",
    "app-root-path": "^3.1.0",
    "basic-ftp": "^5.0.5",
    "detect-port": "^1.5.1",
    "docker-compose": "^0.24.3",
    "dotenv": "^16.4.5",
    "is-ci": "^3.0.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "watcher": "^2.3.1",
    "winston": "^3.14.2",
    "ws": "^8.18.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
